<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AniKayitActivty">


    <include layout="@layout/actionbar"
        android:id="@+id/actionbarNotlar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@+id/actionbarNotlar"
        >

        <TextView
            android:id="@+id/txtInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Her Daim Hatırlamak İstediğiniz Anınız"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/ani_baslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Anınıza Başlık Giriniz"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />

        <EditText
            android:id="@+id/ani"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Anınızı Giriniz"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/not_ekle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EKLE"
        android:layout_margin="10dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_above="@+id/not_iptal"
        />
    <Button
        android:id="@+id/not_iptal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="İPTAL"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        />


</RelativeLayout>